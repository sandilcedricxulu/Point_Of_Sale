      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POS"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminOptions">

    <Grid Background="#fcfcfc">
        <DockPanel LastChildFill="False" Width="800">
            <Grid DockPanel.Dock="Top" Height="60" Background="Teal">
                <Label Content="Admin" FontSize="20" Foreground="#fff" HorizontalAlignment="Left" Margin="57,10,0,0" VerticalAlignment="Top"/>
                <Label Content=".." FontSize="20" x:Name="hrs" Foreground="#fff" HorizontalAlignment="Left" Margin="418,13,0,0" VerticalAlignment="Top"/>
                <Label Content=".." FontSize="20" x:Name="min" Foreground="#fff" HorizontalAlignment="Left" Margin="451,13,0,0" VerticalAlignment="Top"/>
                <materialDesign:PackIcon Kind="AccountCircle" RenderTransformOrigin="2.875,0.875" Height="40" Width="52" Margin="699,10,0,0" Foreground="#fff"/>
            </Grid>
            <!--<Grid DockPanel.Dock="Left">
